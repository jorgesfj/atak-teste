<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <title>Atak Test</title>
</head>
<body>
    <nav class="navbar navbar-light bg-primary">
        <a class="navbar-brand" href="/"> 
            <br>
        </a>
    </nav>
    <div class="container">
        <hr>
        <div class="card">
            <div class="card-header">
                <h2>Pesquisa</h2>
            </div>
            <div class="card-body">
                <form action="/api/search" method="post" style="display: inline;">
                        
                    <input type="text" required name="searchString" id="searchString" class="form-control">
                    <br>
                    <button class="btn btn-success form-control" type="submit">Pesquisar</button>
                        
                </form>
            </div>
        </div>
        <hr>
        <%if(data!=undefined) {%>
            <%data.forEach(result => {%>
                <div class="card">
                    <div class="card-header">
                        Título: <%=result.title%>
                    </div>
                    <div class="card-body">
                        Link: <a href="<%=result.link%>"><%=result.link%></a>
                    </div>
                </div>
                <hr>
            <%})%>
        <%}else {%>
            <h3>Não foi</h3>
        <%}%>
    </div>
    </div>

</body>
